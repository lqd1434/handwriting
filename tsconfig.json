{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "ESNext",
      "dom"
    ],
    "moduleResolution": "node",
    "pretty": true,
    "declaration": true,
    "declarationDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "allowJs": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@":["./src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
